FROM oven/bun:1

WORKDIR /app

# Copier les fichiers de dépendances
COPY package.json bun.lockb ./
COPY tsconfig.json ./

# Installer toutes les dépendances (dev inclus)
RUN bun install

# Le code source sera monté via volume en développement
# mais on copie quand même pour éviter les erreurs
COPY . .

EXPOSE 3000

CMD ["bun", "run", "dev"]

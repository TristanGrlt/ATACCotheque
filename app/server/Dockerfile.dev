FROM node:20-alpine

WORKDIR /app

# Installer les dépendances nécessaires pour compiler bcrypt
RUN apk add --no-cache python3 make g++

# Copier les fichiers de dépendances
COPY package*.json ./
COPY tsconfig.json ./

# Installer toutes les dépendances (dev inclus)
RUN npm install

# Le code source sera monté via volume en développement
# mais on copie quand même pour éviter les erreurs
COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String    @id @default(cuid())
  username               String    @unique
  password               String
  // Onboarding
  isFirstLogin           Boolean   @default(true)
  passwordChangeRequired Boolean   @default(true)
  mfaSetupRequired       Boolean   @default(true)
  mfaMethod              String? // 'totp' or 'webauthn'
  mfaEnabled             Boolean   @default(false)
  //TOTP
  totpSecret             String?
  totpBackupCodes        String[]
  // WebAuthn
  // Audit
  lastPasswordChange     DateTime?
  mfaSetupDate           DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @default(now()) @updatedAt

  userRoles UserRole[]
}

model Role {
  id          Int             @id @default(autoincrement())
  name        String          @unique
  color       String          @default("#e94e1b")
  userRoles   UserRole[]
  permissions AppPermission[]
}

enum AppPermission {
  MANAGE_USERS
  MANAGE_ROLES
  REVIEW_ANNALES
}

model UserRole {
  id     Int    @id @default(autoincrement())
  userId String
  roleId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
}

model Major {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  level Level[]
}

model Level {
  id   Int    @id @default(autoincrement())
  name String

  major   Major    @relation(fields: [majorId], references: [id])
  majorId Int
  course  Course[]
}

model Course {
  id       Int    @id @default(autoincrement())
  name     String
  semestre String
  level    Level  @relation(fields: [LevelId], references: [id])

  LevelId  Int
  examType ExamType[]

  pastExam PastExam[]
}

model ExamType {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  course   Course[]
  pastExam PastExam[]
}

model PastExam {
  id         Int      @id @default(autoincrement())
  path       String   @unique
  year       Int
  course     Course   @relation(fields: [courseId], references: [id])
  courseId   Int
  examtype   ExamType @relation(fields: [examTypeId], references: [id])
  examTypeId Int
}

model Annexe {
  id        Int     @id @default(autoincrement())
  name      String
  type      Type
  isVerifed Boolean
  path      String?
  url       String?
}

enum Type {
  FILE
  URL
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  username  String     @unique
  password  String
  userRoles UserRole[]
}

model Role {
  id          Int              @id @default(autoincrement())
  name        String           @unique
  color       String           @default("#e94e1b")
  userRoles   UserRole[]
  accesRights RoleAccesRight[]
}

model UserRole {
  id     Int    @id @default(autoincrement())
  userId String
  roleId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
}

model AccesRight {
  id          Int              @id @default(autoincrement())
  name        String           @unique
  description String           @default("")
  roles       RoleAccesRight[]
}

model RoleAccesRight {
  id           Int        @id @default(autoincrement())
  roleId       Int
  accesRightId Int
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  accesRight   AccesRight @relation(fields: [accesRightId], references: [id], onDelete: Cascade)

  @@unique([roleId, accesRightId])
}
